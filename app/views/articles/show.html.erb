<div class="container">
  <div class="row">
    <div class="col">
      <%= render @article %>

      <div>
        <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-success" %> |
        <%= link_to "Back to articles", articles_path, class: "btn btn-primary" %>

        <%= button_to "Destroy this article", @article, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>  
  </div>  
</div>  