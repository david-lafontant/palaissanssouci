<div class="container">
  <div class="row">
    <div class="col p-2 my-2">
      <% if user_signed_in? %>
        <div class="actions mt-4">
          <%= link_to "New article", new_article_path, class: "btn btn-primary" %>
        </div>
      <%end%>
      <% content_for :title, "Articles" %>
      <h1>Articles</h1>
      <div id="articles">
        <% @articles.each do |article| %>
          <ul class="list-group">
            <li class="list-group-item">
              <%= article.title %>
            </li>
            <li class="list-group-item">
              <%= link_to "Show this article", article_path(article) %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>