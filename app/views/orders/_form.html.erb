<%= form_with(model: order) do |form| %>
  <% if order.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :first_name, class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>
  <div>
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>
  <div>
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>
  <div>
    <%= form.label :telephone, class: "form-label" %>
    <%= form.text_field :telephone, class: "form-control" %>
  </div>
  <div>
    <%= form.label :address_line1, class: "form-label" %>
    <%= form.text_field :address_line1, class: "form-control" %>
  </div>
  <div>
    <%= form.label :address_line2, class: "form-label" %>
    <%= form.text_field :address_line2, class: "form-control" %>
  </div>
  <div>
    <%= form.label :city, class: "form-label" %>
    <%= form.text_field :city, class: "form-control" %>
  </div>
  <div>
    <%= form.label :state, class: "form-label" %>
    <%= form.text_field :state, class: "form-control" %>
  </div>
  <div>
    <%= form.label :country, class: "form-label" %>
    <%= form.text_field :country, class: "form-control" %>
  </div>
  <div>
    <%= form.label :zipcode, class: "form-label" %>
    <%= form.text_field :zipcode, class: "form-control" %>
  </div>
  <div>
    <%= form.label :intruction, class: "form-label" %>
    <%= form.textarea :intruction, class: "form-control" %>
  </div>
  <div>
    <%= form.label :payment_method, class: "form-label" %>
    <%= form.select :payment_method , Order.payment_methods.keys ,{ prompt: 'Select a payment method' }, class: "form-control" %>
  </div>
  <div>
    <%= form.submit class: "btn btn-success"%>
  </div>
<% end %>
